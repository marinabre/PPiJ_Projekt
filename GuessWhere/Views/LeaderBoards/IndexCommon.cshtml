@model IEnumerable<GuessWhere.Models.LeaderBoard>

@{
    ViewBag.Title = "Leaderboard top 10";
}

<h2 style="color: cornflowerblue">Leaderboard top 10 results</h2>

<head>
    <style>
        table#leaderboardTable {
            width: 100%;
            background: rgba(212, 231, 255, 0.80);
            /*text-align: center;*/
            color: black;
        }
    </style>
</head>

<table class="table" id="leaderboardTable">
    <tr>
        <th></th>
        <th>
            Position
 
        <th>
            Score
        </th>
        <th>
            Username
        </th>
        <th>
            Game played
        </th>
       
    </tr>

    @{
        var top10 = @Model.OrderByDescending(m => m.score).Take(10);
        var position = 0;
    }
    @foreach (var item in top10)
    {
        position += 1;
        <tr>
            <td></td>
            <td>
                @position.
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.IDgame)
            </td>
        </tr>

    }

</table>
